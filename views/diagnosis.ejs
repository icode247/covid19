<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.5.0/mdb.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/js/toastr/toastr.min.css">
  <link rel="stylesheet" href="/css/style.css" />
  <title>Covid-19 Expert System</title>
</head>

<body class="bg-light">
  <div class="loader d-none">
    <div class="dots-7"></div>
  </div>
  <div class="container-sm">

   
    <div class="bg-info d-flex justify-content-sm-between" id="top-nav">
      <h4 class="text-white font-weight-lighter" id="caption">Patient Information</h4>
      <button class="btn btn-danger logout">logout</button>
    </div>
    <!-- Pills navs -->
    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
      <li class="nav-item " role="presentation" aria-disabled="true">
        <a class="nav-link active" id="ex3-tab-2" data-mdb-toggle="pill" href="#ex3-pills-2" role="tab"
          aria-controls="ex3-pills-2" aria-selected="false">patients list</a>
      </li>
      <li class="nav-item " role="presentation" aria-disabled="true">
        <a class="nav-link" href="/patient">Add New</a>
      </li>
    </ul>
    <!-- Pills navs -->

    <!-- Pills content -->
    <div class="tab-content" id="ex2-content">
      <div class="tab-pane fade show active" id="ex3-pills-4" role="tabpanel" aria-labelledby="ex3-tab-4">
        <div class="row">
          <% for(let i=0; i < data.length;i++){ %>
            <div class="col-md-4 mb-4">
              <div class="card shadow">
                <div class="card-body">
                  <h6>Fullname: <%= data[i].fname %>
                  </h6>
                  <h6>Date Of Birth: <%= data[i].dob %>
                  </h6>
                  <h6>National Identification: <%= data[i].idNumber %>
                  </h6>
                  <h6>Occupation: <%= data[i].occupation %>
                  </h6>
                  <h6>Age: <%= data[i].age %>
                  </h6>
                  <h6>Phone Number: <%= data[i].phoneNumber %>
                  </h6>
                  <h6>Education: <%= data[i].education %>
                  </h6>
                  <h6>Sex: <%= data[i].sex %>
                  </h6>
                  <h6>Marital Status: <%= data[i].maritalStatus%>
                  </h6>
                  <div class="row">
                    <div class="col-md-6">
                      <a href="/test?patient_id=<%= data[i]._id%> " class="btn btn-info btn-block">Manage</a>
                    </div>
                    <div class="col-md-6">
                      <a href="/clinical?patient_id=<%= data[i]._id%> " class="btn btn-info btn-block">Progress</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
        </div>

      </div>
    </div>
  </div>
  <!-- Pills content -->
  </div>

</body>
<!-- MDB -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.5.0/mdb.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
  integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
  crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="js/toastr/toastr.min.js"></script>
<script src="/js/logout.js" async></script>

</html>